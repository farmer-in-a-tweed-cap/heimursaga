<%- include('includes/header') %>
<title>Heimursaga | Password Reset</title>

<body data-theme="default" data-layout="fluid" data-sidebar-position="left" data-sidebar-behavior="sticky">
	<div class="main d-flex justify-content-center w-100">
		<main class="content d-flex p-0">
			<div class="container d-flex flex-column">
				<div class="row h-100">
					<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
						<div class="d-table-cell align-middle">

							<div class="text-center mb-4 me-4">
								<img src="./img/brands/Heimursaga Logo & Slogan white-bg.svg" width="280" height="105" alt="Heimursaga">
							</div>

							<div class="card">
								<div class="card-body">
									<%- include('includes/flash') %>
									<div class="text-center mt-2 mb-4">
										<h1 class="h3">Password Reset</h1>
									</div>
									<div class="m-sm-3">
										<form action="/recover" method="POST">

											<form>
												<div class="mb-3">
													<label class="form-label">Enter the email associated with your Explorer account</label>
													<input class="form-control form-control-lg" type="email" name="email"/>
												</div>
												
												<div class="text-center mt-3">

													<input type="hidden" name="_csrf" value="<%= csrfToken %>">

													<button type="submit" class="btn btn-lg btn-primary">Submit</button>
												</div>
											</form>
									</div>

								</div>
							</div>

						</div>
					</div>
				</div>
			</div>
		</main>
	</div>

	<script src="js/app.js"></script>

</body>

</html>